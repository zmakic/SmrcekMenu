<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.user_id %></td>
        <td><%= link_to 'Show', user_ingredient_path(@user, ingredient) %></td>
        <td><%= link_to 'Edit', edit_user_ingredient_path(@user, ingredient) %></td>
        <td><%= link_to 'Destroy', [@user, ingredient], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_user_ingredient_path(@user) %>
